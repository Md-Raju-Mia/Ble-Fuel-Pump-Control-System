<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:id="@+id/web_view_table">


    <ScrollView android:layout_height="220dp"
        android:layout_marginTop="15dp">

        <TableLayout android:id="@+id/score_table"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
<!--            Table Row 2-->

            <TableRow>
            <TextView
                android:id="@+id/receiptHeading"
                android:text="Header"
                android:layout_width="100dp"
                android:layout_column="0"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/receiptHeading1"
                    android:text="Refueling Receipt"
                    android:layout_width="100dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </TableRow>
            <TableRow
                android:layout_marginBottom="15dp">
                <TextView
                    android:id="@+id/datetime"
                    android:text="Date:Time"
                    android:layout_width="100dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
            </TableRow>


            <TableRow>
                <TextView
                    android:text="Model"
                    android:layout_width="100dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp">
                </TextView>
                <TextView
                    android:id="@+id/model"
                    android:text="row2"
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp">
                </TextView>
            </TableRow>

<!--            Table Row 3-->
            <TableRow>
            <TextView
                android:text="Brta Reg No"
                android:layout_width="100dp"
                android:layout_column="0"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="14sp">
            </TextView>
            <TextView
                android:id="@+id/brta_reg_num"
                android:text="row3"
                android:layout_width="30dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="14sp">
            </TextView>
            </TableRow>

            <!--            Table Row 4-->
            <TableRow>
                <TextView
                    android:text="Serial No"
                    android:layout_width="100dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp">
                </TextView>
                <TextView
                    android:id="@+id/serial_number"
                    android:text="row4"
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp">
                </TextView>
            </TableRow>

            <!--            Table Row 5-->
            <TableRow>
                <TextView
                    android:text="Prev Meter Reading"
                    android:layout_width="100dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp">
                </TextView>
                <TextView
                    android:id="@+id/prev_meter_reading"
                    android:text="row5"
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp">
                </TextView>
            </TableRow>

            <!--            Table Row 6-->
            <TableRow>
                <TextView
                    android:text="Last Intake(L)"
                    android:layout_width="100dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:textColor="@color/black">
                </TextView>
                <TextView
                    android:id="@+id/last_intake"
                    android:text="row6"
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp">
                </TextView>
            </TableRow>

            <!--            Table Row 7-->
            <TableRow>
                <TextView
                    android:text="Last Intake Price"
                    android:layout_width="100dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp">
                </TextView>
                <TextView
                    android:id="@+id/last_intake_price"
                    android:text="row7"
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp">
                </TextView>
            </TableRow>

            <!--            Table Row 8-->
            <TableRow>
                <TextView
                    android:text="Avarage K/L"
                    android:layout_width="100dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp">
                </TextView>
                <TextView
                    android:id="@+id/avg_km_l"
                    android:text="row8"
                    android:layout_width="30dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp">
                </TextView>
            </TableRow>

        </TableLayout>
    </ScrollView>
</TableLayout>